@model IEnumerable<PruebaPart1.Models.Persona_client>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<h1 class="mt-3" style="text-align:center ">Bienvenido al Manejador de Clientes </h1>


<div class=" container mt-5">
    <div class="row">
    <div class="col ">
           

            <img type="image"  src="~/images/agregar.png"  alt="text"  width="180" >
            <button class=" btn btn-light mt-2"> <a class="subrayado" asp-action="Create"> <h6>Nuevo Registro</h6></a>  </button>
            
    </div>

    <div class="col ">
        
                <img type="image" src="~/images/perfil.png" alt="text" width="180">

                <button class="btn btn-light mt-2"><a class="subrayado" asp-action="Client_Masculino"> <h6> Resultados Hombres</h6></a>  </button>
                
            
    </div>


    <div class="col ">

            <h4>
                <img type="image" src="~/images/mujer.png" alt="text" width="180">
                <button class="btn btn-light mt-2"><a class="subrayado" asp-action="Client_Femenino"> <h6> Resultados Mujeres</h6></a>  </button>
            </h4>
    </div>

    <div class="col ">
            

        <h4>
                <img type="image" src="~/images/abuelos.png" alt="text" width="180">
                <button class="btn btn-light mt-2"><a class="subrayado" asp-action="MayorEdad"> <h6> Resultados Mayor Edad</h6></a>  </button>
            </h4>

            </h4>
                
    
    </div>

     
    </div>


</div>



<table class="table mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.primerNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.segundoNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.primerApellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.segundoApellido)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>





 <h1 class="mt-5" style="text-align:center">Nombre completo de clientes registrados</h1>

@foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Documento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.primerNombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.segundoNombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.primerApellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.segundoApellido)
                    </td>
                   
                    <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
    
        
}
    </tbody>
</table>
